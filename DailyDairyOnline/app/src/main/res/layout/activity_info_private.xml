<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".InfoPrivate"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/mismo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/privacyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Public"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_gravity="right"/>

            <TextView
                android:id="@+id/timeView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Sunday, January 30, 2022"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginLeft="150dp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE VIEW"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/descriptionView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="DESCRIPTION VIEW"
            android:singleLine="false"
            android:maxLines="12"
            android:scrollbars="vertical"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@drawable/sakto"
            android:textSize="13dp"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:backgroundTint="#0C2D80"
        android:text="BACK"
        android:textColor="@color/white"/>
</LinearLayout>