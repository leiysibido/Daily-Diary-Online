<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0C2D80"
    android:gravity="center"
    tools:context=".PrivateActivity">

    <TextView
        android:id="@+id/txtViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0C2D80"
        android:textSize="2dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How is your day?"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:backgroundTint="#034E8C"
        android:background="@drawable/sakto"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:src="@drawable/ic_upload"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittextbrackground"
        android:backgroundTint="#034E8C"
        android:hint="What is your day title?"
        android:paddingStart="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/edittextbrackground"
        android:gravity="top"
        android:hint="Share your Experience ..."
        android:paddingStart="10dp"
        android:backgroundTint="#034E8C"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextbrackground"
        android:textAllCaps="false"
        android:textColor="#0C2D80"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        android:text="Upload"/>

</LinearLayout>